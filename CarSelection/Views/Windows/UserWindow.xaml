<Window x:Class="CarSelection.Views.Windows.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarSelection.Views.Windows"
        mc:Ignorable="d"
        Title="UserWindow" Height="720" Width="1080" 
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Background="#FF898989">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            
            <Image Source="/Resources/auto-icon.png"/>
            <TextBlock Text="Подбор авто" Grid.Row="1" HorizontalAlignment="Center"/>
            <Button Name="AdsBtn" Content="Все объявления" Grid.Row="2" HorizontalAlignment="Center" Visibility="Collapsed"/>
            <Button Name="ProfileBtn" Content="Профиль" Grid.Row="3" HorizontalAlignment="Center" Visibility="Collapsed"/>
            <Button Name="AuthorisationBtn" Content="Войти" Grid.Row="4" Click="AuthorisationBtn_Click" HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
