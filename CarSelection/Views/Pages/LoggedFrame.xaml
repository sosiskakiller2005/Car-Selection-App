<Page x:Class="CarSelection.Views.Pages.LoggedFrame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarSelection.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="704" d:DesignWidth="308"
      Title="LoggedFrame">

    <Grid Background="#FF898989">
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Подбор авто" Grid.Row="1" HorizontalAlignment="Center"/>
        <Button Name="AdsBtn" Content="Все объявления" Grid.Row="2" HorizontalAlignment="Center"/>
        <Button Name="ProfileBtn" Content="Профиль" Grid.Row="3" HorizontalAlignment="Center"/>
    </Grid>
</Page>
